<p><%= t('aspace_sitemap_job.sitemap_form_help') %></p>
<%= form.hidden_input "format", "zip" %>
<div class="form-group required">
  <span class="control-label"><%= t('aspace_sitemap_job.sitemap_types_legend') %></span>
  <%= form.label_and_multi_boolean("sitemap_types", AppConfig[:allowed_sitemap_types], {}, false, true) %>
</div>
<div class="form-group required">
  <span class="help-block"><%= t('aspace_sitemap_job.sitemap_refresh_freq_help') %></span>
  <%= form.label_and_select "sitemap_refresh_freq", AppConfig[:sitemap_frequencies], {:field_opts => {:required => true}} %>
</div>
<% if (AppConfig.has_key?(:use_human_readable_urls) && AppConfig[:use_human_readable_urls]) || (AppConfig.has_key?(:arks_enabled) && AppConfig[:arks_enabled]) %>
  <div class="form-group">
  <span class="help-block"><%= t('aspace_sitemap_job.sitemap_use_slugs_or_arks_help') %></span>
  <% if AppConfig.has_key?(:use_human_readable_urls) && AppConfig[:use_human_readable_urls] %>
    <div class="col-sm-12">
      <%= label_tag 'sitemap_use_slugs', t('aspace_sitemap_job.sitemap_use_slugs'), class: 'col-sm-2' %>
      <%= radio_button_tag "job[use_arks_or_slugs]", "sitemap_use_slugs" %>
    </div>
  <% end %>
  <% if AppConfig.has_key?(:arks_enabled) && AppConfig[:arks_enabled] %>
    <div class="col-sm-12">
      <%= label_tag 'sitemap_use_arks', t('aspace_sitemap_job.sitemap_use_arks'), class: 'col-sm-2' %>
      <%= radio_button_tag "job[use_arks_or_slugs]", "sitemap_use_arks"  %>
    </div>
  <% end %>
    <div class="col-sm-12">
      <%= label_tag 'sitemap_use_neither', t('aspace_sitemap_job.sitemap_use_neither'), class: 'col-sm-2' %>
      <%= radio_button_tag "job[use_arks_or_slugs]", "sitemap_use_neither", true %>
    </div>
  </div>
<% end %>
<div class="form-group">
  <span class="help-block"><%= t('aspace_sitemap_job.sitemap_use_filesys_help') %></span>
  <%= form.label_and_boolean("sitemap_use_filesys", {}, false, true) %>
</div>
<div class="form-group">
  <span class="help-block"><%= t('aspace_sitemap_job.sitemap_baseurl_help') %></span>
  <%= form.label_and_textfield "sitemap_baseurl", {:field_opts => {:class => "input-large form-control"}} %>
</div>
<div class="form-group required">
  <span class="help-block"><%= t('aspace_sitemap_job.sitemap_limit_help') %></span>
  <% default_limit = AppConfig.has_key?(:aspace_sitemap_default_limit) ? AppConfig[:aspace_sitemap_default_limit] : 50000 %>
  <%= form.label_and_textfield "sitemap_limit", {:field_opts => {:size => 10, :required => true, :type => "number", :value => default_limit}} %>
</div>